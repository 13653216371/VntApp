<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <com.hjq.bar.TitleBar
        android:id="@+id/tb_add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:title="添加"
        app:leftIcon="@mipmap/return_icon"
        app:rightTitle="保存"
        app:leftIconHeight="20dp"
        app:leftIconWidth="20dp"
        app:rightIconHeight="20dp"
        app:rightIconWidth="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            tools:ignore="MissingConstraints">
            <TextView
                android:id="@+id/tv_add_token"
                android:layout_width="@dimen/dp_120"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:text="Token:"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <top.wherewego.widget.view.RegexEditText
                android:id="@+id/et_add_token_value"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入token"
                android:inputType="textVisiblePassword"
                android:maxLength="@integer/sms_code_length"
                android:singleLine="true" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/tv_add_name"
            android:layout_width="@dimen/dp_120"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"/>

        <top.wherewego.widget.view.RegexEditText
            android:id="@+id/et_add_name_value"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入name"
            android:inputType="textVisiblePassword"
            android:maxLength="@integer/sms_code_length"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/tv_add_device_id"
            android:layout_width="@dimen/dp_120"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:text="DeviceID:"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />


        <top.wherewego.widget.view.RegexEditText
            android:id="@+id/et_add_device_id_value"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入device id"
            android:inputType="textVisiblePassword"
            android:maxLength="@integer/sms_code_length"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_add_password"
            android:layout_width="@dimen/dp_120"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />



        <top.wherewego.widget.view.RegexEditText
            android:id="@+id/et_add_password_value"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:inputType="textVisiblePassword"
            android:maxLength="@integer/sms_code_length"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_add_server"
            android:layout_width="@dimen/dp_120"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:text="Server:"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"/>


        <top.wherewego.widget.view.RegexEditText
            android:id="@+id/et_add_server_value"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入server"
            android:inputType="textVisiblePassword"
            android:maxLength="@integer/sms_code_length"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_add_server_address"
            android:layout_width="@dimen/dp_120"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:text="ServerAddress:"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <top.wherewego.widget.view.RegexEditText
            android:id="@+id/et_add_server_address_value"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入server address"
            android:inputType="textVisiblePassword"
            android:maxLength="@integer/sms_code_length"
            android:singleLine="true" />
    </LinearLayout>
</LinearLayout>